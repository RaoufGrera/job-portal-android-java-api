<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdgeLength="0dp"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:layoutDirection="rtl"
   >

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/colorWhite"

        android:layoutDirection="rtl"
        >

        <ProgressBar
            android:id="@+id/loader"
            android:layout_centerInParent="true"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />



        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/form_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"

            android:orientation="vertical">

            <LinearLayout

                android:id="@+id/lvvIdtems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 android:layout_marginBottom="8dp"
                android:background="@color/colorWhite"
                android:orientation="vertical"
                android:paddingBottom="4dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:paddingTop="4dp">

                <LinearLayout

                    android:id="@+id/lvvItems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:background="@color/colorWhite"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:padding="6dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/job_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="1dp"
                        app:cardElevation="1dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imgCompany"
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

                            <TextView
                                android:id="@+id/lblSeeIT"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/textSize"
                                android:textColor="@color/colorPrimaryDarkTow"
                                android:paddingTop="3dp"
                                android:paddingBottom="2dp"
                                android:layout_gravity="center"
                                android:textAlignment="center"
                                 android:drawablePadding="2dp"
                                android:text="2154" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"

                        android:paddingRight="4dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lblJobName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:text="المسمي الوظيفي"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/textSizeX"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/lblCity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                 android:textColor="@color/colorPrimaryDarkTow"


                                android:padding="2dp"
                                android:layout_marginLeft="2dp"
                                android:text="المدينة"
                                android:textSize="@dimen/textSize" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"

                                android:textColor="@color/colorPrimaryDarkTow"

                                android:padding="2dp"
                                android:layout_marginLeft="2dp"
                                android:text="●"
                                android:textSize="@dimen/textSize" />

                            <TextView
                                android:id="@+id/lblDomain"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textColor="@color/colorPrimaryDarkTow"

                                android:padding="4dp"
                                android:text="هندسة"
                                android:textSize="@dimen/textSize" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textColor="@color/colorPrimaryDarkTow"


                                android:padding="2dp"
                                android:layout_marginLeft="2dp"
                                android:text="●"
                                android:textSize="@dimen/textSize" />
                            <TextView
                                android:id="@+id/lblEndDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:textColor="@color/colorPrimaryDarkTow"

                                android:padding="2dp"

                                android:text="أخر موعد"
                                android:textSize="@dimen/textSize" />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:visibility="gone"
                    android:gravity="center_horizontal">

                    <Button
                        android:id="@+id/btntojob"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="4dp"

                        android:layout_marginRight="4dp"
                        android:layout_weight="1"

                        android:background="@drawable/btn_info"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:text="تقدم للوظيفـة"
                        android:textColor="#fff" />



                </LinearLayout>





                <LinearLayout
                    android:id="@+id/llJob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

android:paddingRight="6dp"
                    android:paddingLeft="6dp"
                    android:gravity="center_vertical"
                    android:background="@color/colorWhite"

                    android:orientation="vertical">

                    <View
                        android:id="@+id/vJobbb"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"

                        android:background="@color/colorLine"
                        />

                    <TextView
                        android:id="@+id/lblCompName"
                        android:layout_width="match_parent"
                        android:text="الشركة"
                        android:layout_height="40dp"
 android:drawableRight="@drawable/ic_compblack"

                        android:gravity="left|center_vertical"
                        android:textColor="@color/colorCV"
                        android:textSize="@dimen/textSize"
                        android:padding="6dp"
                        />

                    <View
                        android:id="@+id/vJob"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:visibility="gone"
                        android:background="@color/colorLine"
                        />
                    <TextView
                        android:id="@+id/btnEmail"
                        android:layout_width="match_parent"
                        android:layout_height="38dp"

                        android:gravity="left|center_vertical"
                        android:visibility="gone"
                        android:textColor="@color/colorPrimaryDarkTow"
                        android:textSize="@dimen/textSizeX"
                        android:clickable="true"
                        android:focusable="true"
                        android:textIsSelectable="true"
                        android:text="aaa@aaa.com"
                        android:padding="6dp"
                           />
                    <View
                        android:id="@+id/vweb"
                        android:visibility="gone"

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorLine"
                        />
                    <Button
                        android:id="@+id/btnWebsite"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="left|center_vertical"
                        android:visibility="gone"

                         android:textColor="@color/colorPrimaryDarkTow"

                        android:background="@drawable/btnhide"
                 android:text=""
                        android:padding="6dp"


                        />
                    <View
                        android:id="@+id/vphone"
                        android:visibility="gone"

                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorLine"
                        />
                    <Button
                        android:id="@+id/btnPhone"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:gravity="left|center_vertical"
                        android:textColor="@color/colorPrimaryDarkTow"
                        android:visibility="gone"

                        android:background="@drawable/btnhide"
                        android:clickable="true"
                         android:focusable="true"
                        android:padding="6dp"

                        android:text="092778701255"
                        />

                </LinearLayout>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/colorLine" />


                <TextView
                    android:id="@+id/txtDesc"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:textIsSelectable="true"
                    android:lineSpacingMultiplier="1.4"

                    android:textColor="@color/colorPrimaryDarkTow"
                    android:fitsSystemWindows="true"
                    android:gravity="top"

                     android:paddingLeft="4dp"
                    android:paddingRight="4dp" />




            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</ScrollView>