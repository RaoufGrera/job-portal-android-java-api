<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
app:cardUseCompatPadding="true"
    android:paddingBottom="0dp"
    app:cardElevation="0dp"
app:cardMaxElevation="0dp"
    android:layoutDirection="rtl"
     app:cardBackgroundColor="@color/colorWhite">


    <LinearLayout

        android:layout_width="match_parent"
        android:id="@+id/lvvIdtems"
        android:background="@color/colorWhite"

        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingBottom="2dp"

        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:layout_marginBottom="8dp"
        android:paddingTop="2dp">
    <LinearLayout

        android:layout_width="match_parent"
        android:id="@+id/lvvItems"
        android:background="@color/colorWhite"

        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_marginBottom="2dp"
        android:paddingTop="8dp">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
            <ImageView
                android:id="@+id/imgCompany"
                android:layout_width="55dp"
                android:layout_height="55dp"

                app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

            <TextView
                android:id="@+id/lblMatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:padding="4dp"

                android:drawableRight="@drawable/ic_favorite_black_14dp"
                android:layout_gravity="center"
              android:textColor="@color/colorPrimaryDark"
                  android:text="2" />
            </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:layout_marginRight="4dp"

            android:background="@color/colorWhiteSmoke"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="6dp"
             android:orientation="vertical">

            <TextView
                android:id="@+id/lblName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize"
                android:padding="4dp"
                android:paddingBottom="3dp"
                android:textColor="#4a8198"
                android:text="الاسم" />
            <TextView
                android:id="@+id/lblAbout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
android:textColor="@color/colorPrimaryDark"
                android:text="الشركة"
                android:textSize="@dimen/textSize" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="3dp"
               />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/lblCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorWhite"


                    android:background="@drawable/text_tripoli"
                    android:paddingRight="2dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"

                    android:drawableRight="@drawable/ic_place_white_18dp"
                    android:paddingLeft="4dp"
                    android:layout_marginLeft="2dp"
                    android:text="المدينة"
                    android:textSize="@dimen/textSize" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimaryDark"


                    android:padding="2dp"
                    android:layout_marginLeft="2dp"
                    android:text="●"
                    android:textSize="@dimen/textSize" />

                <TextView
                    android:id="@+id/lblDomain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"

                    android:padding="3dp"
                    android:textColor="@color/colorPrimary"

                    android:text="المجال"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimaryDark"


                    android:padding="2dp"
                    android:layout_marginLeft="2dp"
                    android:text="●"
                    android:textSize="@dimen/textSize" />

            <TextView
                android:id="@+id/lblEdtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"

                android:padding="3dp"
                android:textColor="@color/colorPrimary"

                android:text="المؤهل العلمي"
              />

            <TextView
                android:id="@+id/lblExp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:drawablePadding="10dp"
                android:padding="3dp"
                android:text="الخبرة"
                android:textColor="@color/colorPrimaryDark"
                android:visibility="gone"
                android:textDirection="rtl"
                android:textSize="14dp" />
            </LinearLayout>

        </LinearLayout>





    </LinearLayout>

        <TextView
            android:id="@+id/lblSpec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"

            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:textDirection="rtl"
            android:textSize="14dp" />



    </LinearLayout>
</androidx.cardview.widget.CardView>