<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipe_container"

    >
    <RelativeLayout
        android:id="@+id/container"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        >


        <Button
            android:id="@+id/imgWifi"
            android:drawableTop="@drawable/ic_wifi"
            android:visibility="gone"
            android:drawablePadding="10dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:text="@string/noConnection"
            android:padding="15dp"
            android:background="@drawable/btnedit"
            android:textSize="@dimen/textSizeXL"
            android:layout_height="wrap_content" />
        <ProgressBar
            android:id="@+id/loader"
            android:visibility="invisible"

            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorLine"
            android:id="@+id/form_container"

            tools:context="libyacvpro.libya_cv.SearchFragment">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorBack"
                android:gravity="center_horizontal"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:id="@+id/linearLayout5"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/btnCity"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="4dp"

                    android:layout_marginRight="4dp"
                    android:layout_weight="1"

                    android:background="@drawable/btnsearch"
                    android:drawableLeft="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="كل المدن" />


                <Button
                    android:id="@+id/btnDomain"

                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/btnsearch"
                    android:drawableLeft="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="كل المجالات" />


            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout5" />
        </android.support.constraint.ConstraintLayout>

    </RelativeLayout>
</android.support.v4.widget.SwipeRefreshLayout>
