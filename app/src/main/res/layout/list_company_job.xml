<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingRight="4dp"
    android:id="@+id/RItem"
    android:clickable="false"
    android:focusable="false"

    android:layoutDirection="ltr"
    android:paddingLeft="4dp"
    android:background="@color/colorWhite"

    >

    <TextView
        android:id="@+id/jobName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="14dp"

        android:layout_marginLeft="14dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/btnOnlineData"
        android:layout_toRightOf="@+id/btnOnlineData"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="جاdsمعة جامعd  fds fds dsfds  جامعة جامعة طرابلس"
        android:textColor="@color/colorPrimaryDark" />


    <Button
        android:id="@+id/btnOnlineData"
        android:layout_width="45dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@+id/btn_Delete"
        android:layout_toRightOf="@+id/btn_Delete"
        android:background="@drawable/btnedit"
        android:drawableRight="@drawable/ic_edit_black_24dp"
        android:paddingRight="10dp" />

    <Button
        android:id="@+id/btn_Delete"
        android:layout_width="45dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_alignParentRight="false"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="18px"
        android:layout_marginTop="4dp"

        android:layout_marginRight="18px"
        android:background="@drawable/btnedit"
        android:drawableRight="@drawable/ic_delete_forever_black_24dp"
        android:paddingRight="10dp" />

</RelativeLayout>