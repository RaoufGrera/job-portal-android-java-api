<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingRight="4dp"

    android:paddingLeft="4dp"
    android:background="@color/colorWhite"

    >

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"


        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/line"
        android:layout_toRightOf="@+id/line"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/line"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.52">


        <TextView
            android:id="@+id/tvItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:paddingLeft="4dp"

            android:paddingRight="1dp"
            android:text="dsadsaaaaaaadfdd sffdsØ³"
            android:textDirection="rtl"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tvcItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"


            android:paddingLeft="4dp"
            android:paddingRight="1dp"
            android:text="fdsafdsafas"
            android:textSize="14dp" />
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="1dp"
        android:layout_height="38dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnOnlineData"
        app:layout_constraintTop_toTopOf="parent">

    </View>
    <Button
        android:id="@+id/btnOnlineData"
        android:layout_width="57dp"
        android:layout_height="38dp"


android:layout_marginLeft="4dp"
        android:layout_marginBottom="2dp"
         android:layout_marginTop="2dp"
        android:background="@drawable/btnedit"
        android:drawableRight="@drawable/ic_remove_red_eye_black_24dp"
        android:paddingRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.166" />



</android.support.constraint.ConstraintLayout>