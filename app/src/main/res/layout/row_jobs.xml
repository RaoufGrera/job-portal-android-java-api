<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
app:cardUseCompatPadding="true"
    app:cardElevation="1dp"
app:cardMaxElevation="2dp"
    android:layoutDirection="rtl"
     app:cardBackgroundColor="@color/colorWhite">


    <LinearLayout

        android:layout_width="match_parent"
        android:id="@+id/lvvIdtems"
        android:background="@color/colorWhite"

        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_marginBottom="8dp"
        android:paddingTop="8dp">
    <LinearLayout

        android:layout_width="match_parent"
        android:id="@+id/lvvItems"
        android:background="@color/colorWhite"

        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_marginBottom="2dp"
        android:paddingTop="8dp">

        <android.support.v7.widget.CardView
            android:id="@+id/job_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            app:cardCornerRadius="1dp"
            app:cardElevation="1dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
            <ImageView
                android:id="@+id/imgCompany"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

            <TextView
                android:id="@+id/lblSeeIT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:paddingTop="3dp"
                android:paddingBottom="1dp"

                android:textAlignment="center"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:drawableRight="@drawable/ic_remove_red_eye_black_24dp"
                 android:text="2154" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
             android:orientation="vertical">

            <TextView
                android:id="@+id/lblJobName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textStyle="bold"
                android:padding="4dp"
                android:textColor="#4a8198"
                android:text="المسمي الوظيفي" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine"
                android:layout_marginBottom="2dp"
                ></View>
            <TextView
                android:id="@+id/lblCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_domain_black_24dp"
                android:drawablePadding="10dp"
                android:padding="3dp"
                android:text="الشركة"
                android:textDirection="rtl"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/lblCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_place_black_18dp"
                android:drawablePadding="10dp"
                android:padding="3dp"
                android:text="المدينة"
                android:textDirection="rtl"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/lblStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_sv_calendar_5"
                 android:drawablePadding="10dp"
                android:padding="3dp"
                 android:text="أخر موعد"
                android:textDirection="rtl"
                android:textSize="12dp" />

        </LinearLayout>




    </LinearLayout>

        <TextView
            android:id="@+id/lblTextJob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            android:text=""
            android:lineSpacingMultiplier="1.3"

            android:textDirection="rtl"
            android:textSize="14dp" />
    </LinearLayout>
</android.support.v7.widget.CardView>