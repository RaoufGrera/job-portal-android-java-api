<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdgeLength="0dp"
    android:fillViewport="true"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:layoutDirection="rtl" >

    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/colorWhite"

        android:layoutDirection="rtl"
        >


        <ProgressBar
            android:id="@+id/loader"
            android:layout_centerInParent="true"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/form_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"

            android:orientation="vertical">



                <LinearLayout

                    android:id="@+id/lvvIdtems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="8dp"
                    android:background="@color/colorWhite"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:paddingBottom="4dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingTop="4dp">

                    <LinearLayout

                        android:id="@+id/lvvItems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="2dp"
                        android:background="@color/colorWhite"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        >

                        <android.support.v7.widget.CardView
                            android:id="@+id/job_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="4dp"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="1dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/imgCompany"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentTop="true"
                                    app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />


                            </LinearLayout>

                        </android.support.v7.widget.CardView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="6dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/lblCompanyName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:text="المسمي الوظيفي"
                                android:textColor="#4a8198"
                                android:textSize="16dp"
                                android:textStyle="bold" />


                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="12dp"
                                android:background="@color/colorLine" />

                            <TextView
                                android:id="@+id/lblCity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="10dp"
                                android:drawableRight="@drawable/ic_place_black_18dp"
                                android:gravity="center_vertical"
                                android:padding="3dp"
                                android:text=" المدينة"
                                android:textColor="@color/colorPrimaryDark"

                                android:textDirection="rtl"
                                android:textSize="14dp" />


                            <TextView
                                android:id="@+id/lblDomainName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="10dp"
                                android:drawableRight="@drawable/ic_apps_black_24dp"
                                android:gravity="center_vertical"
                                android:padding="3dp"
                                android:text="أخر موعد"
                                android:textColor="@color/colorPrimaryDark"
                                android:textDirection="rtl"
                                android:textSize="14dp" />

                            <TextView
                                android:id="@+id/lblSeeIT"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorPrimaryDark"
                                android:padding="3dp"
                                android:text="1415"
                                android:drawablePadding="10dp"

                                android:drawableRight="@drawable/ic_favorite_black_14dp"
                                android:textSize="@dimen/textSize" />


                            <Button
                                android:id="@+id/btntojob"
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:layout_gravity="center_horizontal"

                                android:layout_marginTop="8dp"
                                android:background="@drawable/btn_info"

                                android:text="متابعـة"
                                android:textColor="#fff" />
                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="12dp"
                        android:background="@color/colorLine" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center_horizontal"
                         android:layout_height="wrap_content"
                        android:orientation="horizontal">



                    <Button
                        android:id="@+id/btnFacebook"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_google"


                         android:textColor="@color/colorPrimaryAccent"
                        android:text=""
                        android:padding="8dp"
                        android:layout_margin="2dp"
                        android:visibility="gone"

                        android:drawableRight="@drawable/facebook_icon" />

                        <Button
                            android:id="@+id/btnEmail"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:textColor="@color/colorPrimaryAccent"
                            android:text=""
                            android:background="@drawable/btn_google"
                            android:padding="8dp"

                            android:layout_margin="2dp"

                            android:visibility="gone"

                            android:drawableRight="@drawable/ic_computer" />

                        <Button

                            android:id="@+id/btnWebsite"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:textColor="@color/colorPrimaryAccent"
                             android:background="@drawable/btn_google"
                            android:padding="8dp"
                            android:visibility="gone"

                            android:layout_margin="2dp"

                             android:drawableRight="@drawable/ic_www" />

                        <ImageView
                            android:id="@+id/btnMap"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:textColor="@color/colorPrimaryAccent"

                            android:background="@drawable/btn_google"
                            android:padding="8dp"

                            android:visibility="gone"
                            android:layout_margin="2dp"

                             android:src="@drawable/ic_map" />

                        <Button
                            android:clickable="true"
                            android:focusable="true"
                            android:id="@+id/btnPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:background="@drawable/btn_google"
                            android:layout_marginStart="4dp"
                            android:visibility="gone"

                            android:text="092778701255"
                            android:padding="8dp"

                            android:layout_margin="2dp"
                            android:drawableLeft="@drawable/ic_phone_android_black_24dp" />

                </LinearLayout>
                </LinearLayout>











            <TextView
                android:id="@+id/txtServddddices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:padding="4dp"
                android:layout_marginTop="10dp"
                android:text="الخدمات"
                android:textDirection="rtl"
                android:textSize="16dp" />
            <View
                android:layout_marginTop="3dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />
            <TextView
                android:id="@+id/txtServices"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.6"

                android:paddingRight="4dp"
                android:paddingLeft="4dp"
                android:gravity="top"
                android:fitsSystemWindows="true"
                android:inputType="textMultiLine"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/lblddde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="1.6"
                android:paddingRight="4dp"
                android:paddingLeft="4dp"
                android:padding="4dp"
                android:text="عن الشركة"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"

                android:textDirection="rtl"
                android:textSize="16dp" />
            <View
                android:layout_marginTop="3dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />
            <TextView
                android:id="@+id/txtDesc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingRight="4dp"
                android:paddingLeft="4dp"
                android:gravity="top"
                android:fitsSystemWindows="true"
                android:lineSpacingMultiplier="1.6"

                />


        </LinearLayout>
    </RelativeLayout>
</ScrollView>