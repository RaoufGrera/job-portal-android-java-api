<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    app:cardElevation="0dp"
    app:cardMaxElevation="0dp"
    android:layoutDirection="rtl"
    app:cardBackgroundColor="@color/colorWhite">


    <LinearLayout

        android:layout_width="match_parent"
        android:id="@+id/lvvIdtems"
        android:background="@color/colorWhite"

        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingBottom="6dp"
        android:paddingLeft="4dp"
        android:paddingRight="6dp"
        android:layout_marginBottom="2dp"
        android:paddingTop="6dp">
    <LinearLayout

        android:layout_width="match_parent"
        android:id="@+id/lvvItems"
        android:background="@color/colorWhite"

        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_marginBottom="2dp"
        android:paddingTop="4dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">



            <ImageView
                android:id="@+id/imgCompany"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />



            </LinearLayout>


        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginRight="4dp"
            android:background="@color/colorWhiteSmoke"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="6dp"
             android:orientation="vertical">

            <TextView
                android:id="@+id/lblCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSizeXL"
                android:padding="4dp"
                android:textColor="#4a8198"
                android:text="المسمي الوظيفي" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine"
                android:layout_marginBottom="4dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/lblCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorWhite"

android:drawableRight="@drawable/ic_place_white_18dp"
                    android:background="@drawable/text_tripoli"
                    android:paddingRight="2dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"

                    android:paddingLeft="4dp"
                    android:layout_marginLeft="2dp"
                    android:text="المدينة"
                    android:textSize="@dimen/textSize" />

                <TextView
                    android:id="@+id/lblDomainName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimary"

                    android:drawablePadding="4dp"
                    android:drawableRight="@drawable/ic_apps_black_24dp"
                    android:padding="4dp"
                    android:text="هندسة"
                    android:textSize="@dimen/textSize" />


                <TextView
                    android:id="@+id/lblSeeIT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:paddingTop="3dp"
                    android:paddingBottom="2dp"
                    android:text="1415"
                    android:drawablePadding="4dp"

                    android:drawableRight="@drawable/ic_favorite_black_14dp"
                    android:textAlignment="center"
                    android:textSize="@dimen/textSize" />

        </LinearLayout>



        </LinearLayout>
    </LinearLayout>

        <TextView
            android:id="@+id/lblServices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:maxLines="8"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:text="fff"
            android:maxHeight="300dp"

android:textColor="@color/colorPrimaryDarkTow"
            android:lineSpacingMultiplier="1.3"
            android:textSize="14dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>