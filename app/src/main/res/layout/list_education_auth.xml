<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingRight="4dp"
    android:id="@+id/tvvItem"

    android:layoutDirection="rtl"
    android:paddingLeft="4dp"
    android:background="@color/colorWhite"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2dp"
        android:id="@+id/tvItem"

        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="2dp"
        android:orientation="vertical">
    <TextView
        android:id="@+id/lblFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="جامعة بنغازي كلية تقنية المعلومات "


        android:paddingBottom="3dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/textSize"/>

    <TextView
        android:id="@+id/lblSecond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="ماجستير ، مهندس شبكات "


        android:paddingBottom="3dp"

        android:textSize="@dimen/textSize"/>
    <TextView
        android:id="@+id/lblThird"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="2016 - 2018 "

        android:paddingBottom="3dp"

        android:textSize="14dp" />
        <TextView
            android:id="@+id/lblForth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="المجال تقنية معلومات"
            android:paddingBottom="3dp"

            android:textSize="14dp" />


    </LinearLayout>
        <ImageButton
            android:id="@+id/imgButton"
            android:background="@color/colorWhite"
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:contentDescription="Test"
            />
    </LinearLayout>
</RelativeLayout>