<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
app:cardUseCompatPadding="true"
    android:paddingBottom="0dp"
    app:cardElevation="0dp"
app:cardMaxElevation="0dp"
    android:layoutDirection="rtl"
     app:cardBackgroundColor="@color/colorWhite">


    <LinearLayout

        android:layout_width="match_parent"
        android:id="@+id/lvvIdtems"
        android:background="@color/colorWhite"

        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical"
        android:paddingBottom="2dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_marginBottom="8dp"
        android:paddingTop="2dp">
    <LinearLayout

        android:layout_width="match_parent"
        android:id="@+id/lvvItems"
        android:background="@color/colorWhite"

        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingBottom="4dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:layout_marginBottom="2dp"
        android:paddingTop="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/job_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            app:cardCornerRadius="1dp"
            app:cardElevation="1dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
            <ImageView
                android:id="@+id/imgCompany"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

            <TextView
                android:id="@+id/lblMatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"

                android:textAlignment="center"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:drawableRight="@drawable/ic_remove_red_eye_black_24dp"
                 android:text="2154" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
             android:orientation="vertical">

            <TextView
                android:id="@+id/lblName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textStyle="bold"
                android:padding="4dp"
                android:textColor="#4a8198"
                android:text="الاسم" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine"
                android:layout_marginBottom="2dp"
                ></View>
            <TextView
                android:id="@+id/lblDomain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_apps_black_24dp"
                android:drawablePadding="10dp"
                android:padding="3dp"
                android:textColor="@color/colorPrimaryDark"

                android:text="المجال"
                android:textDirection="rtl"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/lblCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_place_black_18dp"
                android:drawablePadding="10dp"
                android:padding="3dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="المدينة"
                android:textDirection="rtl"
                android:textSize="14dp" />


            <TextView
                android:id="@+id/lblEdtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_school_black_18dp"
                 android:drawablePadding="10dp"
                android:padding="3dp"
                android:textColor="@color/colorPrimaryDark"

                android:text="المؤهل العلمي"
                android:textDirection="rtl"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/lblExp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:drawableRight="@drawable/ic_work_black_24dp"
                android:drawablePadding="10dp"
                android:padding="3dp"
                android:text="الخبرة"
                android:textColor="@color/colorPrimaryDark"

                android:textDirection="rtl"
                android:textSize="14dp" />

        </LinearLayout>




    </LinearLayout>

        <TextView
            android:id="@+id/lblAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingRight="6dp"
            android:paddingLeft="6dp"
            android:text="الشركة"
            android:visibility="gone"
            android:textDirection="rtl"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/lvvItfems"
            android:background="@color/colorWhite"

            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:layout_marginBottom="2dp"
            android:paddingTop="5dp">


        <Button
        android:id="@+id/btnAccept"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:paddingRight="17dp"
            android:layout_weight="1"
            android:text="قبول"
            android:layout_marginRight="4px"
            android:layout_alignParentRight="false"
            android:background="@drawable/btnedit"


            android:drawableRight="@drawable/ic_check_black_24dp"

            />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:paddingRight="17dp"
                android:layout_weight="1"
                android:text="رفض وحذف"

                android:layout_marginRight="18px"
                android:layout_alignParentRight="false"
                android:background="@drawable/btnedit"


                android:drawableRight="@drawable/ic_delete_forever_black_24dp"

                />
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>