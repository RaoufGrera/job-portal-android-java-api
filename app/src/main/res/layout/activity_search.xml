<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLine"
    tools:context="libyacvpro.libya_cv.SearchActivity">


    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBack"
        android:gravity="center_horizontal"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnCity"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="4dp"

            android:layout_marginRight="4dp"
            android:layout_weight="1"

            android:background="@drawable/btnsearch"
            android:drawableLeft="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="كل المدن" />


        <Button
            android:id="@+id/btnDomain"

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:background="@drawable/btnsearch"
            android:drawableLeft="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="كل المجالات" />


    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout5" >

    </androidx.recyclerview.widget.RecyclerView>


</androidx.constraintlayout.widget.ConstraintLayout>
