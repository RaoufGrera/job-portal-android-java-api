
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:background="@color/colorBackgroundActivity"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/container"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:padding="8dp">

        <ProgressBar
            android:id="@+id/loader"

            android:visibility="invisible"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/imgWifi"
            android:drawableRight="@drawable/ic_wifi"
            android:visibility="invisible"
            android:paddingRight="8dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:text="@string/noConnection"
            android:background="@drawable/btnedit"
            android:layout_height="wrap_content" />
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/form_container"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:orientation="vertical"
            >


            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtFname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="الاسم"
                    />

            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtAbout"
                    android:hint="نبذه مختصره"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    />


            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtEmail"
                    android:hint="البريد الإلكتروني"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtPhone"
                    android:hint="رقم الهاتف"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtAddress"
                    android:hint="العنوان"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    />
            </com.google.android.material.textfield.TextInputLayout>




            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtBirthDay"
                    android:hint="العنوان"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    />
</com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="58dp"
                android:gravity="bottom"
                android:padding="0dp"
                android:background="@drawable/select_edit_text"
                android:clipToPadding="false"
                >
            <Spinner
                android:id="@+id/spCity"
                android:layout_height="54dp"
                android:layout_width="fill_parent"

                android:layoutDirection="rtl" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="58dp"
                android:gravity="bottom"
                android:padding="0dp"
                android:background="@drawable/select_edit_text"
                android:clipToPadding="false"
                >
        <Spinner
            android:id="@+id/spNat"
            android:layout_height="54dp"
            android:layout_width="fill_parent"


            android:layoutDirection="rtl" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="58dp"
                android:gravity="bottom"
                android:padding="0dp"
                android:background="@drawable/select_edit_text"
                android:clipToPadding="false"
                >
            <Spinner
                android:id="@+id/spDomain"
                android:layout_height="54dp"
                android:layout_width="fill_parent"


                android:layoutDirection="rtl" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="58dp"
                android:gravity="bottom"
                android:padding="0dp"
                android:background="@drawable/select_edit_text"
                android:clipToPadding="false"
                >
            <Spinner
                android:id="@+id/spSex"

                android:layout_height="54dp"
                android:layout_width="fill_parent"
                 android:layoutDirection="rtl" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtGoals"
                    android:hint="الهدف الوظيفي"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="top"

                    android:fitsSystemWindows="true"
                    android:inputType="textMultiLine"
                    />
        </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/btnSave"

                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"

                android:background="@drawable/backgroudspeener"
                android:paddingLeft="70dp"

                android:textSize="@dimen/textBtn"
                android:paddingRight="70dp"
                android:text="حفـظ"

                android:textColor="#fff" />

</LinearLayout>

        </RelativeLayout>
    </ScrollView>