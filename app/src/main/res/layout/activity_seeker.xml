
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:background="@color/colorBackgroundActivity"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/container"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:padding="8dp">

        <ProgressBar
            android:id="@+id/loader"

            android:visibility="invisible"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/imgWifi"
            android:drawableRight="@drawable/ic_wifi"
            android:visibility="invisible"
            android:paddingRight="8dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:text="@string/noConnection"
            android:background="@drawable/btnedit"
            android:layout_height="wrap_content" />
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/form_container"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/contact_form_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:drawableTop="@drawable/ic_id_card_color"
                android:drawablePadding="8dp"
                android:textColor="#4f4f4f"
                android:textStyle="bold"
                />

            <View
                android:layout_width="match_parent"
                android:background="@color/colorLine"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                ></View>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="54dp"
                android:gravity="bottom"
                android:paddingTop="4dp"
                android:clipToPadding="false"
                android:hint="الإسم"
                >
                <EditText
                    android:id="@+id/txtFname"
                    android:layout_height="54dp"
                    android:background="@drawable/select_edit_text"
                    android:layout_width="fill_parent"
                    android:inputType="textPersonName" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="54dp"
                android:gravity="bottom"
                android:paddingTop="4dp"
                android:clipToPadding="false"
                android:hint="اللقب"
                >
                <EditText
                    android:id="@+id/txtLname"
                    android:layout_height="54dp"
                    android:background="@drawable/select_edit_text"
                    android:layout_width="fill_parent"
                    android:inputType="textPersonName" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="54dp"
                android:gravity="bottom"
                android:paddingTop="4dp"
                android:clipToPadding="false"
                android:hint="نبذه مختصره"
                >
                <EditText
                    android:id="@+id/txtAbout"
                    android:layout_height="54dp"
                    android:background="@drawable/select_edit_text"
                    android:layout_width="fill_parent"
                    android:inputType="textPersonName" />
            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="54dp"
                android:gravity="bottom"
                android:paddingTop="4dp"
                android:clipToPadding="false"
                android:hint="البريد الإلكتروني"
                >
                <EditText
                    android:id="@+id/txtEmail"
                    android:layout_height="54dp"
                    android:background="@drawable/select_edit_text"
                    android:layout_width="fill_parent"
                    android:inputType="textPersonName" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="54dp"
                android:gravity="bottom"
                android:paddingTop="4dp"
                android:clipToPadding="false"
                android:hint="رقم الهاتف"
                >
                <EditText
                    android:id="@+id/txtPhone"
                    android:layout_height="54dp"
                    android:background="@drawable/select_edit_text"
                    android:layout_width="fill_parent"
                    android:inputType="number" />

            </android.support.design.widget.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:padding="2dp"
                android:textColor="#ccc"
                android:text="رقم الهاتف لايمكن تغييره الا بعد 60 يوم."
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:padding="2dp"
                android:textColor="#ccc"
                android:text="بإمكانك اخفاء سيرتك الذاتية ورقم الهاتف من خلال الإعدادات"
                />
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="54dp"
                android:gravity="bottom"
                android:paddingTop="4dp"
                android:clipToPadding="false"
                android:hint="العنوان"
                >
                <EditText
                    android:id="@+id/txtAddress"
                    android:layout_height="54dp"
                    android:background="@drawable/select_edit_text"
                    android:layout_width="fill_parent"
                    android:inputType="textPersonName" />
            </android.support.design.widget.TextInputLayout>




            <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="58dp"
            android:gravity="bottom"
            android:paddingTop="4dp"
            android:clipToPadding="false"
            android:hint="تاريخ الميلاد"
            >
            <EditText
                android:id="@+id/txtBirthDay"
                android:layout_width="fill_parent"
                android:layout_height="58dp"
                android:ems="10"
                android:hint="مواليد"
                android:background="@drawable/select_edit_text"

                android:inputType="date" />
</android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="58dp"
                android:gravity="bottom"
                android:padding="0dp"
                android:background="@drawable/select_edit_text"
                android:clipToPadding="false"
                >
            <Spinner
                android:id="@+id/spCity"
                android:layout_height="54dp"
                android:layout_width="fill_parent"

                android:layoutDirection="rtl" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="58dp"
                android:gravity="bottom"
                android:padding="0dp"
                android:background="@drawable/select_edit_text"
                android:clipToPadding="false"
                >
        <Spinner
            android:id="@+id/spNat"
            android:layout_height="54dp"
            android:layout_width="fill_parent"


            android:layoutDirection="rtl" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="58dp"
                android:gravity="bottom"
                android:padding="0dp"
                android:background="@drawable/select_edit_text"
                android:clipToPadding="false"
                >
            <Spinner
                android:id="@+id/spDomain"
                android:layout_height="54dp"
                android:layout_width="fill_parent"


                android:layoutDirection="rtl" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="58dp"
                android:gravity="bottom"
                android:padding="0dp"
                android:background="@drawable/select_edit_text"
                android:clipToPadding="false"
                >
            <Spinner
                android:id="@+id/spSex"

                android:layout_height="54dp"
                android:layout_width="fill_parent"
                 android:layoutDirection="rtl" />

            </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="150dp"
            android:gravity="bottom"
            android:paddingTop="4dp"
            android:clipToPadding="false"
            android:hint="الهدف الوظيفي"
            >
            <EditText
                android:id="@+id/txtGoals"
                android:layout_width="fill_parent"
                android:layout_height="150dp"

                android:background="@drawable/select_edit_text"
                android:gravity="top"
                android:fitsSystemWindows="true"
                android:inputType="textMultiLine"


                />
        </android.support.design.widget.TextInputLayout>


            <Button
                android:id="@+id/btnSave"

                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"

                android:background="@drawable/backgroudspeener"
                android:paddingLeft="70dp"

                android:textSize="@dimen/textBtn"
                android:paddingRight="70dp"
                android:text="حفـظ"

                android:textColor="#fff" />

</LinearLayout>

        </RelativeLayout>
    </ScrollView>