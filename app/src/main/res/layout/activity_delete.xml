<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:layoutDirection="rtl"
    tools:context="libyacvpro.libya_cv.DeleteActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"

        android:paddingRight="8dp"
        android:paddingLeft="8dp"
     >

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="false"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"

            android:gravity="right"
            android:layoutDirection="rtl"
            android:orientation="vertical"
            android:textDirection="anyRtl">
            <android.support.v7.widget.CardView
                android:id="@+id/cardCurrentLocation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"

                android:layout_marginLeft="4dp"
                android:layout_marginBottom="15dp"


                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:src="@drawable/ic_delete" />



                    <TextView
                        android:id="@+id/txtDeleteName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingRight="12dp"
                        android:paddingLeft="12dp"
                        android:layout_gravity="center"
                         android:text="@string/infoCert"

                        android:lineSpacingExtra="6dp"
                        android:paddingBottom="20dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textDirection="rtl" />




                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/linearLayout"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <Button
                android:id="@+id/btn_Delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btndelete"
                android:text="حذف"
                android:layout_weight="1"

                android:textColor="@color/colorWhite"
                android:layout_margin="2dp"

                />
            <Button
                android:id="@+id/btn_Back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btnedit"
                android:layout_weight="1"

                android:layout_margin="2dp"

                android:text="إلغاء" />



        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
