<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
android:background="@drawable/ic_untitled"

    >


    <ProgressBar
        android:id="@+id/loader"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/form_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layoutDirection="rtl"

        >

        <ImageView
             android:layout_width="80dp"
            android:layout_height="85dp"
            android:layout_gravity="center_horizontal"
android:layout_marginBottom="5dp"
            android:src="@drawable/ic_launcher_foreground"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/textBtn"
            android:textColor="@color/colorWhite"
            android:text="[  Libyacv بوابة التوظيف الليبي  ]"
            />






        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="18dp"
            android:layout_height="58dp"
            android:gravity="bottom"
            android:paddingTop="4dp"
            android:clipToPadding="false"

            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/til_email"
                android:layout_width="fill_parent"
                android:layout_height="58dp"
                android:background="@drawable/select_edit_text"
                android:inputType="textEmailAddress"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/email_icon"
                android:drawableLeft="@drawable/email_icon"
                android:paddingRight="6dp"
                android:paddingLeft="6dp"
                android:text="raouf.grera@gmail.com"
              />

        </android.support.design.widget.TextInputLayout>



        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="18dp"
            android:layout_height="58dp"
            android:gravity="bottom"
            android:paddingTop="4dp"

            android:clipToPadding="false"
            app:passwordToggleEnabled="true"


            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/til_password"
                android:layout_width="fill_parent"
                android:layout_height="58dp"
                android:imeOptions="actionDone"
                android:maxLines="1"
                android:textColor="#555555"

                android:text="102030"
                android:inputType="textPassword"
                android:drawableStart="@drawable/lock_icon"
                android:drawableLeft="@drawable/lock_icon"
                android:drawablePadding="10dp"
                android:paddingRight="6dp"
                android:background="@drawable/select_edit_text"

                />

        </android.support.design.widget.TextInputLayout>


        <TextView
            android:id="@+id/go_to_register"
            android:text="ليس لديك حساب"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            style="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_login"
            android:text="تسجيــل دخــول"

             android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:textColor="@color/colorWhite"
            android:background="@drawable/btn_info"
            android:layout_height="match_parent"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:background="@color/colorLine"/>

        <Button
            android:id="@+id/btn_facebook"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="42dp"
            android:textColor="@color/colorWhite"
            android:paddingLeft="4dp"
            android:text="تسجيل الدخول بالفيسبوك"
            android:drawableLeft="@drawable/facebook_icon"
            android:background="@drawable/btn_face"
            />

        <Button
            android:id="@+id/sign_in_button"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="42dp"
            android:textColor="@color/colorPrimaryDark"
            android:paddingLeft="4dp"
            android:text="تسجيل الدخول بالقوقل"
            android:drawableLeft="@drawable/ic_google"
            android:background="@drawable/btn_google"
            />

    </LinearLayout>


</RelativeLayout>
