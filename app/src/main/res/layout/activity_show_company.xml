<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"

    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/container"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layoutDirection="rtl"

        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:padding="6dp">

        <ProgressBar
            android:id="@+id/loader"

            android:visibility="invisible"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/imgWifi"
            android:drawableRight="@drawable/ic_wifi"
            android:visibility="invisible"
            android:paddingRight="8dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:text="@string/noConnection"
            android:background="@drawable/btnedit"
            android:layout_height="wrap_content" />
        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/form_container"

            android:orientation="vertical"
            >

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@android:color/white"

                app:cardElevation="1dp">

                <LinearLayout

                    android:id="@+id/lvvIdtems"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="8dp"
                    android:background="@color/colorWhite"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:paddingBottom="8dp"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:paddingTop="4dp">

                    <LinearLayout

                        android:id="@+id/lvvItems"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginBottom="2dp"
                        android:background="@color/colorWhite"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        >

                        <android.support.v7.widget.CardView
                            android:id="@+id/job_card"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"


                            app:cardCornerRadius="1dp"
                            app:cardElevation="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/imgCompany"
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentTop="true"
                                    app:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />

                                <TextView
                                    android:id="@+id/lblSeeIT"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:drawableRight="@drawable/ic_remove_red_eye_black_24dp"
                                    android:paddingBottom="4dp"
                                    android:paddingLeft="20dp"

                                    android:paddingRight="20dp"
                                    android:paddingTop="4dp"
                                    android:text="2154"
                                    android:textAlignment="center"
                                    android:textSize="12dp" />
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="8dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/lblCompanyName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:text="المسمي الوظيفي"
                                android:textColor="#4a8198"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginBottom="2dp"
                                android:background="@color/colorLine" />

                            <TextView
                                android:id="@+id/lblCity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="10dp"
                                android:drawableRight="@drawable/ic_place_black_18dp"
                                android:gravity="center_vertical"
                                android:padding="3dp"
                                android:text=" المدينة"
                                android:textDirection="rtl"
                                android:textSize="14dp" />


                            <TextView
                                android:id="@+id/lblDomainName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="10dp"
                                android:drawableRight="@drawable/ic_apps_black_24dp"
                                android:gravity="center_vertical"
                                android:padding="3dp"
                                android:text="أخر موعد"
                                android:textDirection="rtl"
                                android:textSize="12dp" />

                            <TextView
                                android:id="@+id/lblComptName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawablePadding="10dp"
                                android:drawableRight="@drawable/ic_domain_black_24dp"
                                android:gravity="center_vertical"
                                android:padding="3dp"
                                android:text="الشركة"
                                android:textDirection="rtl"
                                android:textSize="14dp" />


                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="12dp"
                        android:background="@color/colorLine" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content">



                    <ImageView
                        android:id="@+id/btnFacebook"
                         android:layout_width="46dp"
                        android:layout_height="42dp"
                        android:background="@drawable/btnedit"
                        android:clickable="true"
                        android:focusable="true"
android:layout_marginStart="4dp"
android:layout_marginEnd="4dp"
                        android:visibility="gone"

                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:src="@drawable/facebook_icon" />

                        <ImageView
                            android:id="@+id/btnEmail"
                            android:layout_width="46dp"
                            android:layout_height="42dp"
                            android:background="@drawable/btnedit"
                            android:clickable="true"
                            android:focusable="true"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:visibility="gone"

                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:src="@drawable/ic_computer" />

                        <ImageView
                            android:clickable="true"
                            android:focusable="true"
                            android:id="@+id/btnWebsite"
                            android:layout_width="46dp"
                            android:layout_height="42dp"
                            android:background="@drawable/btnedit"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:paddingLeft="10dp"
                            android:visibility="gone"

                            android:paddingRight="10dp"
                            android:src="@drawable/ic_www" />

                        <ImageView
                            android:clickable="true"
                            android:focusable="true"
                            android:id="@+id/btnMap"
                            android:layout_width="46dp"
                            android:layout_height="42dp"
                            android:background="@drawable/btnedit"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:visibility="gone"

                            android:src="@drawable/ic_map" />
                        <Button
                            android:clickable="true"
                            android:focusable="true"
                            android:id="@+id/btnPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            android:background="@drawable/btnedit"
                            android:layout_marginStart="4dp"

                            android:visibility="gone"
                            android:text="092778701255"
                            android:layout_marginEnd="4dp"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:drawableRight="@drawable/ic_phone_android_black_24dp" />

                </LinearLayout>
                </LinearLayout>


            </android.support.v7.widget.CardView>




            <Button
                android:id="@+id/btntojob"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"

                android:background="@drawable/btn_info"
                android:paddingLeft="60dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:paddingRight="60dp"
                android:text="متابعـة"
                android:textColor="#fff" />



            <TextView
                android:id="@+id/txtServddddices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:padding="4dp"
                android:layout_marginTop="10dp"
                android:text="الخدمات"
                android:textDirection="rtl"
                android:textSize="16dp" />
            <View
                android:layout_marginTop="3dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />
            <TextView
                android:id="@+id/txtServices"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.6"

                android:paddingRight="4dp"
                android:paddingLeft="4dp"
                android:gravity="top"
                android:fitsSystemWindows="true"
                android:inputType="textMultiLine"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/lblddde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="1.6"
                android:paddingRight="4dp"
                android:paddingLeft="4dp"
                android:padding="4dp"
                android:text="عن الشركة"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"

                android:textDirection="rtl"
                android:textSize="16dp" />
            <View
                android:layout_marginTop="3dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />
            <TextView
                android:id="@+id/txtDesc"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingRight="4dp"
                android:paddingLeft="4dp"
                android:gravity="top"
                android:fitsSystemWindows="true"
                android:lineSpacingMultiplier="1.6"

                />


        </LinearLayout>
    </RelativeLayout>
</ScrollView>